{% extends 'layout.app.html.twig' %}

{% block content %}
    <div class="uk-container-expand uk-padding-small" uk-height-viewport="expand: true">
        <div class="uk-grid uk-grid-small uk-child-width-1-5@s uk-flex-center uk-text-center"
             uk-grid
             uk-height-match="target: .uk-card">
            {% for host in hosts %}
                <div>
                    <div class="uk-card uk-card-default uk-card-body">
                        <p>{{ host.name }}</p>
                        <img class="img" src="{{ host.img }}" alt="Server">
                    </div>
                </div>
            {% endfor %}
            <div>
                <a href="#add-host" uk-toggle>
                <div class="uk-card uk-card-default uk-card-body uk-text-center">
                    <div class="uk-position-center">
                        <p>Add another</p>
                        <span uk-icon="icon: plus-circle; ratio: 2"></span>
                    </div>
                </div>
                </a>
            </div>
        </div>
    </div>

    <div id="add-host" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">Add Host</h2>
            </div>
            <div class="uk-modal-body">
                <p>Please select one from the list below</p>

                <div>

                </div>
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                <button class="uk-button uk-button-primary" type="button">Save</button>
            </div>
        </div>
    </div>
{% endblock %}
